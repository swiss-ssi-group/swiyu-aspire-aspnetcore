@page
@model Employee.Mgmt.Pages.CreateCredentialIssuerModel
@{
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <h3 class="display-6">@ViewData["Title"]</h3>
            <form method="post">
                <div class="field">
                    <div class="control">
                        <button type="submit" class="btn btn-primary">Create Issuer credential</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-sm">
            <div id="qrcode">
                @if (Model.QrCodePng.Length > 0)
                {
                    <img width="300" src="data:image;base64,@System.Convert.ToBase64String(Model.QrCodePng)" />
                }
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        @if (Model.ManagementId != null)
        {
            <div id="message-wrapper">
                <div class="fs-2 mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-fill-check" viewBox="0 0 16 16">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m1.679-4.493-1.335 2.226a.75.75 0 0 1-1.174.144l-.774-.773a.5.5 0 0 1 .708-.708l.547.548 1.17-1.951a.5.5 0 1 1 .858.514M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0"></path>
                        <path d="M2 13c0 1 1 1 1 1h5.256A4.5 4.5 0 0 1 8 12.5a4.5 4.5 0 0 1 1.544-3.393Q8.844 9.002 8 9c-5 0-6 3-6 4"></path>
                    </svg>
                    
                </div>
                <div id="message" />             
            </div>
            
            <input type="hidden" id="respIssuanceReq" value="@Model.ManagementId" />
            <a class="btn btn-link" href="@Model.QrCodeUrl">Swiyu URL</a>
        }
    </div>
</div>

@section scripts {
    <script src="issuer.js"></script>
}