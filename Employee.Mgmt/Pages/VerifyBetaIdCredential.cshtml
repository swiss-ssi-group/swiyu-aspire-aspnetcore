@page
@model Employee.Mgmt.Pages.VerifyBetaIdCredentialModel
@{
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <button type="submit" class="btn btn-success">Verify your swiyu Beta ID</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.QrCodePng.Length > 0)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8 text-center">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">QR Code</h5>
                        <img width="300" src="data:image;base64,@System.Convert.ToBase64String(Model.QrCodePng)" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>@Model.QrCodeUrl</div>